# Example environment configuration; replace with actual secrets in deployment (Key Vault).

# Broker
ALPACA_API_KEY=YOUR_ALPACA_KEY
ALPACA_API_SECRET=YOUR_ALPACA_SECRET
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_FEED=iex

# Azure Storage (choose one)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=...
# or use MSI + container names
AZURE_STORAGE_ACCOUNT=yourstorageaccount
AZURE_STORAGE_ACCOUNT_KEY=storage-key-placeholder
AZURE_STORAGE_CONTAINER_NAME=traderdata
AZURE_STORAGE_CONTAINER_DATA=trader-data
AZURE_STORAGE_CONTAINER_MODELS=trader-models
ACR_LOGIN_SERVER=https://yourregistry.azurecr.io
ACR_USERNAME=acr-username
ACR_PASSWORD=acr-password

# PostgreSQL (Flexible Server)
PGHOST=your-db.postgres.database.azure.com
PGPORT=5432
PGDATABASE=traderdata
PGUSER=db_user
PGPASSWORD=db_password
PGSSLMODE=require
DATABASE_URL='postgresql+psycopg2://db_user:db_password@host:5432/traderdata?sslmode=require'

# Runtime defaults
TZ=America/Los_Angeles
TRADING_ENABLED=false
PAPER_TRADING=true
PORT=8000
PYTHONUNBUFFERED=1
WEBSITES_PORT=8000
APP_ENVIRONMENT=dev
PRICE_PROVIDERS=alpaca,yahoo
YF_TIMEOUT_SECS=6
WATCHLIST_SOURCE=textlist
WATCHLIST_TEXT="AAPL, MSFT, NVDA"
MAX_WATCHLIST=25
